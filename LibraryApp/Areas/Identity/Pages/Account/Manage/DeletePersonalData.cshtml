@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "პერსონალური მონაცემების წაშლა";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>ამ მონაცემების წაშლა სამუდამოდ ამოშლის თქვენს ანგარიშს და მისი აღდგენა ვერ მოხერხდება.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="მიმდინარე პაროლი" aria-required="true" placeholder="შეიყვანეთ პაროლი." />
                <label asp-for="Input.Password" class="form-label">პაროლი</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">მონაცემების წაშლა და ანგარიშის დახურვა</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
