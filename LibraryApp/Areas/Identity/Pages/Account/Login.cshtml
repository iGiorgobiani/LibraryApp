@page
@model LoginModel

@{
    ViewData["Title"] = "შესვლა";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="მომხმარებელი" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">ელ. ფოსტა</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="პაროლი" aria-required="true" placeholder="პაროლი" />
                    <label asp-for="Input.Password" class="form-label">პაროლი</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">შესვლა</button>
                </div>
                <br />
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">დაგავიწყდათ პაროლი?</a>
                    </p>
@*                     <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">რეგისტრაცია</a>
                    </p> *@
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
